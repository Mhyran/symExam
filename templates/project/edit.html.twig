{% extends 'base.html.twig' %}

{% block title %}

{% endblock %}

{% block body %}
    <div class="container-fluid pt-3 text-center">
        <div class="row">
            <div class="col-6">
                <h1>Projet : {{ project.name }}</h1>
                <p>Créé le : {{ project.startedAt|date('d/m/Y') }}</p>
                <p>Nombre de tâche : {{ tasks|length }}</p>
            </div>
            <div class="col-6 text-center">
                <p>Statut du projet</p>
                <form method="post" action="">
                    <select class="form-control w-25 d-inline-block" name="statut">
                        <option name="Nouveau">Nouveau</option>
                        <option name="En Cours">En cours</option>
                        <option name="Terminée">Terminée</option>
                    </select>
                    <input class="btn btn-warning" type="submit" name="edit">
                </form>
            </div>
        </div>

    </div>
    <div class="container pt-5">
        <button class="btn btn-info"><a href="{{ path('add_task', {id: project.id})}}">Ajouter une tâche</a></button>
        <table class="table table-hover">
            <thead>
            <tr>
                <th scope="col">Nom de la tâche</th>
                <th scope="col">Description</th>
                <th scope="col">Ajouté le</th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr class="table-secondary">
                    <th scope="row">{{task.title}}</th>
                    <td>{{task.description}}</td>
                    <td>{{task.createdAt|date('d/m/Y')}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

